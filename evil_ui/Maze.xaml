<Window x:Class="evil_ui.Maze"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:evil_ui"
        mc:Ignorable="d"
        Title="Maze" Height="489" Width="815" ResizeMode="CanMinimize">
    <Grid x:Name="MazeGrid" Height="450" Width="800" Focusable="True" KeyUp="KeyUnpressed" KeyDown="KeyPressed" HorizontalAlignment="Left" VerticalAlignment="Top">

        <Button Content="Goal" HorizontalAlignment="Center" Height="40"  VerticalAlignment="Center" Width="40" Click="Button_Click" Margin="0,-8,0,0"/>
        <Rectangle x:Name="basePlayer" Height="0" Width="0" Margin="1,1,0,0" Fill="Aqua" />
        <Rectangle x:Name="BaseWall" HorizontalAlignment="Left" VerticalAlignment="Top" Height="10" Width="10" Fill="Black" Margin="10,0,0,0" Visibility="Hidden" IsEnabled="False"/>

        <Label Content="Use the Arrow Keys to move the box." HorizontalAlignment="Left" Height="28" Margin="281,67,0,0" VerticalAlignment="Top" Width="185" FontSize="10"/>
        <Label Content="Your objective is to hit the center goal." HorizontalAlignment="Left" Height="28" Margin="281,82,0,0" VerticalAlignment="Top" Width="185" FontSize="10"/>
        
        
        

    </Grid>
</Window>
